---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { formatPrice } from '../lib/medusa';
---

<Layout title="Shopping Cart | Orgasm Toy">
  <Header />

  <main class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">Shopping Cart</h1>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div class="lg:col-span-2">
          <div id="cart-items" class="space-y-4">
            <!-- Cart items will be rendered here by JavaScript -->
          </div>

          <div id="empty-cart" class="hidden bg-white rounded-lg shadow-sm p-12 text-center">
            <svg
              class="w-24 h-24 text-gray-400 mx-auto mb-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
              />
            </svg>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Your cart is empty</h2>
            <p class="text-gray-600 mb-6">Add some products to get started</p>
            <a
              href="/shop"
              class="inline-block bg-rose-600 text-white px-8 py-3 rounded-full font-medium hover:bg-rose-700 transition"
            >
              Continue Shopping
            </a>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
          <div id="order-summary" class="bg-white rounded-lg shadow-sm p-6 sticky top-24">
            <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>

            <div class="space-y-3 mb-6">
              <div class="flex justify-between text-gray-600">
                <span>Subtotal</span>
                <span id="subtotal">$0.00</span>
              </div>
              <div class="flex justify-between text-gray-600">
                <span>Shipping</span>
                <span id="shipping">Calculated at checkout</span>
              </div>
              <div class="flex justify-between text-gray-600">
                <span>Tax</span>
                <span id="tax">Calculated at checkout</span>
              </div>
              <div class="border-t pt-3 flex justify-between font-bold text-lg">
                <span>Total</span>
                <span id="total">$0.00</span>
              </div>
            </div>

            <a
              href="/checkout"
              id="checkout-btn"
              class="block w-full bg-rose-600 text-white text-center px-8 py-4 rounded-full font-medium hover:bg-rose-700 transition shadow-lg hover:shadow-xl mb-4"
            >
              Proceed to Checkout
            </a>

            <a
              href="/shop"
              class="block w-full text-center text-rose-600 font-medium hover:underline"
            >
              Continue Shopping
            </a>

            <div class="border-t mt-6 pt-6">
              <h3 class="font-semibold text-sm text-gray-900 mb-3">We Accept</h3>
              <div class="flex gap-2">
                <span class="text-xs bg-gray-100 px-3 py-2 rounded border">Visa</span>
                <span class="text-xs bg-gray-100 px-3 py-2 rounded border">Mastercard</span>
                <span class="text-xs bg-gray-100 px-3 py-2 rounded border">PayPal</span>
              </div>
            </div>

            <div class="mt-6 p-4 bg-rose-50 rounded-lg">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-rose-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                <div>
                  <h4 class="font-medium text-sm text-gray-900">Discreet Packaging</h4>
                  <p class="text-xs text-gray-600 mt-1">Plain packaging with no product names or logos</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />

  <script>
    import { $localCart, $cartTotal, updateCartItemQuantity, removeFromCart, syncWithMedusa } from '../stores/cart';
    import { formatPrice } from '../lib/medusa';

    function renderCart() {
      const cart = $localCart.get();
      const cartItemsEl = document.getElementById('cart-items');
      const emptyCartEl = document.getElementById('empty-cart');
      const checkoutBtn = document.getElementById('checkout-btn');

      if (!cartItemsEl || !emptyCartEl || !checkoutBtn) return;

      if (!cart.items || cart.items.length === 0) {
        cartItemsEl.innerHTML = '';
        emptyCartEl.classList.remove('hidden');
        checkoutBtn.classList.add('opacity-50', 'pointer-events-none');
        updateSummary(0);
        return;
      }

      emptyCartEl.classList.add('hidden');
      checkoutBtn.classList.remove('opacity-50', 'pointer-events-none');

      let html = '';
      cart.items.forEach((item) => {
        const itemTotal = item.price * item.quantity;
        const formattedPrice = formatPrice(item.price);
        const formattedTotal = formatPrice(itemTotal);

        html += `
          <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex gap-6">
              <div class="w-24 h-24 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                <img
                  src="${item.image || '/placeholder-product.jpg'}"
                  alt="${item.title}"
                  class="w-full h-full object-cover"
                />
              </div>

              <div class="flex-1">
                <div class="flex justify-between mb-2">
                  <div>
                    <h3 class="font-semibold text-lg text-gray-900">${item.title}</h3>
                    ${item.variantTitle ? `<p class="text-sm text-gray-600">${item.variantTitle}</p>` : ''}
                  </div>
                  <button
                    data-remove-id="${item.id}"
                    class="remove-item-btn text-gray-400 hover:text-red-600 transition"
                    aria-label="Remove item"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </div>

                <p class="text-gray-600 mb-4">${formattedPrice} each</p>

                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <button
                      data-update-id="${item.id}"
                      data-delta="-1"
                      class="update-qty-btn w-8 h-8 border border-gray-300 rounded hover:bg-gray-50 transition flex items-center justify-center"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                      </svg>
                    </button>
                    <span class="w-12 text-center font-medium">${item.quantity}</span>
                    <button
                      data-update-id="${item.id}"
                      data-delta="1"
                      class="update-qty-btn w-8 h-8 border border-gray-300 rounded hover:bg-gray-50 transition flex items-center justify-center"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                    </button>
                  </div>

                  <div class="text-lg font-bold text-gray-900">${formattedTotal}</div>
                </div>
              </div>
            </div>
          </div>
        `;
      });

      cartItemsEl.innerHTML = html;
      
      // Re-attach event listeners
      document.querySelectorAll('.remove-item-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = (btn as HTMLElement).dataset.removeId;
          if (id) {
            removeFromCart(id);
            syncWithMedusa();
          }
        });
      });

      document.querySelectorAll('.update-qty-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = (btn as HTMLElement).dataset.updateId;
          const delta = parseInt((btn as HTMLElement).dataset.delta || '0');
          const item = cart.items.find(i => i.id === id);
          if (id && item) {
            updateCartItemQuantity(id, item.quantity + delta);
            syncWithMedusa();
          }
        });
      });
    }

    function updateSummary(total: number) {
      const formattedTotal = formatPrice(total);
      const subtotalEl = document.getElementById('subtotal');
      const totalEl = document.getElementById('total');
      if (subtotalEl) subtotalEl.textContent = formattedTotal;
      if (totalEl) totalEl.textContent = formattedTotal;
    }

    // Subscribe to stores
    $localCart.subscribe(() => {
      renderCart();
    });

    $cartTotal.subscribe((total) => {
      updateSummary(total);
    });

    // Initial sync
    syncWithMedusa();
  </script>
</Layout>
