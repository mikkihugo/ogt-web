---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Orgasm Toy - Wellness & Pleasure">
  <header class="bg-gradient-to-r from-rose-100 to-purple-100 py-6">
    <div class="container mx-auto px-4">
      <nav class="flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-gray-900">Orgasm Toy</a>
        <div class="flex gap-6">
          <a href="/shop" class="text-gray-700 hover:text-rose-600">Shop</a>
          <a href="/blog" class="text-gray-700 hover:text-rose-600">Blog</a>
          <a href="/about" class="text-gray-700 hover:text-rose-600">About</a>
        </div>
      </nav>
    </div>
  </header>

  <main>
    <section class="bg-gradient-to-br from-rose-50 via-purple-50 to-pink-50 py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Discover Your Pleasure
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Premium wellness and intimacy products curated for your journey of self-discovery.
        </p>
        <a
          href="/shop"
          class="inline-block bg-rose-600 text-white px-8 py-3 rounded-full font-medium hover:bg-rose-700 transition"
        >
          Explore Collection
        </a>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Featured Categories</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition">
            <div class="w-16 h-16 bg-rose-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <span class="text-2xl">&#10084;</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Couples</h3>
            <p class="text-gray-600">Enhance your connection</p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition">
            <div class="w-16 h-16 bg-purple-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <span class="text-2xl">&#9734;</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Self-Care</h3>
            <p class="text-gray-600">Personal wellness essentials</p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition">
            <div class="w-16 h-16 bg-pink-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <span class="text-2xl">&#9728;</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Wellness</h3>
            <p class="text-gray-600">Body-safe products</p>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">From Our Blog</h2>
        <p class="text-gray-600 mb-8">Tips, guides, and wellness insights</p>
        <a href="/blog" class="text-rose-600 font-medium hover:underline">
          Read the latest posts &rarr;
        </a>
      </div>
    </section>
  </main>

  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8">
        <div>
          <h4 class="font-bold text-lg mb-4">Orgasm Toy</h4>
          <p class="text-gray-400">Premium wellness products for your intimate journey.</p>
        </div>
        <div>
          <h4 class="font-bold mb-4">Shop</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/shop" class="hover:text-white">All Products</a></li>
            <li><a href="/shop/couples" class="hover:text-white">Couples</a></li>
            <li><a href="/shop/self-care" class="hover:text-white">Self-Care</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold mb-4">Support</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/faq" class="hover:text-white">FAQ</a></li>
            <li><a href="/shipping" class="hover:text-white">Shipping</a></li>
            <li><a href="/returns" class="hover:text-white">Returns</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold mb-4">Legal</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/privacy" class="hover:text-white">Privacy Policy</a></li>
            <li><a href="/terms" class="hover:text-white">Terms of Service</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
        <p>&copy; 2025 Orgasm Toy. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>
