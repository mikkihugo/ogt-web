---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductCard from '../components/ProductCard.astro';
import { medusaClient } from '../lib/medusa';

// Fetch featured products
let featuredProducts = [];
let error = null;

try {
  const response = await medusaClient.getProducts({ limit: 6 });
  featuredProducts = response.products;
} catch (e) {
  console.error('Error fetching products:', e);
  error = e instanceof Error ? e.message : 'Failed to load products';
}
---

<Layout title="Orgasm Toy - Premium Wellness & Pleasure Products">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-rose-50 via-purple-50 to-pink-50 py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Discover Your Pleasure
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Premium wellness and intimacy products curated for your journey of self-discovery.
          Body-safe materials, discreet shipping.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/shop"
            class="inline-block bg-rose-600 text-white px-8 py-4 rounded-full font-medium hover:bg-rose-700 transition shadow-lg hover:shadow-xl"
          >
            Explore Collection
          </a>
          <a
            href="/blog"
            class="inline-block bg-white text-rose-600 px-8 py-4 rounded-full font-medium hover:bg-gray-50 transition shadow-lg hover:shadow-xl"
          >
            Read Our Guides
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Categories -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Featured Categories</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <a href="/shop?category=couples" class="group">
            <div class="bg-gradient-to-br from-rose-50 to-rose-100 rounded-lg shadow-md p-8 text-center hover:shadow-xl transition-all">
              <div class="w-20 h-20 bg-white rounded-full mx-auto mb-6 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
                <span class="text-4xl">&#10084;</span>
              </div>
              <h3 class="text-2xl font-semibold mb-3 text-gray-900">Couples</h3>
              <p class="text-gray-600 mb-4">Enhance intimacy and connection with your partner</p>
              <span class="text-rose-600 font-medium group-hover:underline">Shop Couples &rarr;</span>
            </div>
          </a>

          <a href="/shop?category=self-care" class="group">
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg shadow-md p-8 text-center hover:shadow-xl transition-all">
              <div class="w-20 h-20 bg-white rounded-full mx-auto mb-6 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
                <span class="text-4xl">&#9734;</span>
              </div>
              <h3 class="text-2xl font-semibold mb-3 text-gray-900">Self-Care</h3>
              <p class="text-gray-600 mb-4">Personal wellness essentials for self-love</p>
              <span class="text-purple-600 font-medium group-hover:underline">Shop Self-Care &rarr;</span>
            </div>
          </a>

          <a href="/shop?category=wellness" class="group">
            <div class="bg-gradient-to-br from-pink-50 to-pink-100 rounded-lg shadow-md p-8 text-center hover:shadow-xl transition-all">
              <div class="w-20 h-20 bg-white rounded-full mx-auto mb-6 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
                <span class="text-4xl">&#9728;</span>
              </div>
              <h3 class="text-2xl font-semibold mb-3 text-gray-900">Wellness</h3>
              <p class="text-gray-600 mb-4">Body-safe products for holistic health</p>
              <span class="text-pink-600 font-medium group-hover:underline">Shop Wellness &rarr;</span>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Products -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-3xl font-bold">Featured Products</h2>
          <a href="/shop" class="text-rose-600 font-medium hover:underline">
            View All &rarr;
          </a>
        </div>

        {error ? (
          <div class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-lg">
            <p class="font-medium">Unable to load products</p>
            <p class="text-sm mt-1">{error}</p>
            <p class="text-sm mt-2">
              Make sure the Medusa backend is running and PUBLIC_MEDUSA_BACKEND_URL is configured.
            </p>
          </div>
        ) : featuredProducts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {featuredProducts.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-600 mb-4">No products available at the moment.</p>
            <a href="/shop" class="text-rose-600 font-medium hover:underline">
              Browse our catalog
            </a>
          </div>
        )}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Why Choose Us</h2>
        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-rose-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Body-Safe Materials</h3>
            <p class="text-gray-600 text-sm">Premium, non-toxic materials for your safety</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Discreet Shipping</h3>
            <p class="text-gray-600 text-sm">Plain packaging, no logos or product names</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-pink-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Fast Delivery</h3>
            <p class="text-gray-600 text-sm">Quick and reliable shipping worldwide</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-rose-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Expert Support</h3>
            <p class="text-gray-600 text-sm">Friendly customer service to help you</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog/Education Section -->
    <section class="bg-gradient-to-br from-rose-50 via-purple-50 to-pink-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">From Our Blog</h2>
        <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
          Explore our guides, tips, and wellness insights to enhance your intimate journey.
        </p>
        <a
          href="/blog"
          class="inline-block bg-rose-600 text-white px-8 py-3 rounded-full font-medium hover:bg-rose-700 transition"
        >
          Read the Latest Posts &rarr;
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
