MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=magento
MYSQL_USER=magento
MYSQL_PASSWORD=magento

# Magento repo credentials (get from repo.magento.com)
COMPOSER_MAGENTO_USERNAME=
COMPOSER_MAGENTO_PASSWORD=

# Base URL for magento (after docker compose up, nginx maps to port 8080)
MAGENTO_BASE_URL=http://localhost:8080/

# Magento admin (required for bootstrap)
ADMIN_USER=
ADMIN_PASSWORD=
ADMIN_EMAIL=

# Optional: override defaults
# DB_NAME=magento
# DB_USER=magento
# DB_PASSWORD=magento

# Media to S3 (populate via Infisical; keep in .env.encrypted)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=
# S3_ENDPOINT=https://storage.fly.io           # optional (custom endpoint; Fly Tigris)
