<?xml version="1.0"?>
<!--
/**
 * Orgasmtoy.com - Default Layout
 * Customizations for all pages
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Add custom CSS -->
        <css src="css/source/_extend.less"/>

        <!-- Add custom JS -->
        <script src="js/theme.js"/>

        <!-- Meta tags for SEO and privacy -->
        <meta name="description" content="Premium adult wellness products with discreet shipping and guaranteed privacy"/>
        <meta name="keywords" content="adult products, wellness, intimate products, discreet shipping"/>
        <meta name="robots" content="index,follow"/>

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="favicon.ico"/>
    </head>

    <body>
        <!-- Add privacy notice to footer -->
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template"
                   name="privacy.notice"
                   template="Magento_Theme::html/privacy-notice.phtml"
                   before="-"/>

            <block class="Magento\Framework\View\Element\Template"
                   name="trust.badges"
                   template="Magento_Theme::html/trust-badges.phtml"
                   after="privacy.notice"/>
        </referenceContainer>

        <!-- Customize header -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_width" xsi:type="number">200</argument>
                <argument name="logo_height" xsi:type="number">50</argument>
                <argument name="logo_alt" xsi:type="string">Orgasmtoy - Premium Adult Wellness</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
